@model NEMESYS.Models.InvestigationClass

@{
    ViewData["Title"] = "EditInvestigationEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Investigation Entry</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item"><span class="font-weight-bold">Current Investigation Description </span> </li>
            <li class="list-group-item"><span class="col-auto">@Model.InvestigationDescription</span> </li>
        </ul>

        <hr />
        <hr />

        <form asp-action="EditInvestigationEntry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvestigationDescription" class="control-label">Change Description of Investigation:</label>
                <input asp-for="InvestigationDescription" class="form-control" />
                <span asp-validation-for="InvestigationDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit Description" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <p>
        @ViewBag.messageInvestigationEditted
    </p>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
