@{
    ViewData["Title"] = "Delete Page";
}
@model ReportClass

<div class="container">
        <h3 class="display-4">Details</h3>
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        
                        @*@for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <div class="@(i==0 ? "carousel-item active" : "carousel-item") ">
                                <img class="d-block w-100" src="@Model.Gallery[i].URL" alt="@Model.Gallery[i].Name">
                            </div>
                        }*@

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <h1>@Model.ReportTitle</h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-primary">
                        <span class="label label-primary">By: @Model.ReporterFirstName @Model.ReporterLastName</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p class="description">
                            @Model.HazardDescription
                        </p>
                    </div>
                </div>

                <hr />

                <ul class="list-group">
                    <li class="list-group-item"><span class="font-weight-bold">Hazard Type      - </span> @Model.HazardType</li>
                    <li class="list-group-item"><span class="font-weight-bold">Hazard Photo      - </span> @Model.HazardPhoto</li>
                    <li class="list-group-item"><span class="font-weight-bold">Hazard Location  - </span> @Model.HazardLocation</li>
                    <li class="list-group-item"><span class="font-weight-bold">Hazard Status    - </span> @Model.HazardStatus</li>
                    <li class="list-group-item"><span class="font-weight-bold">Hazard Date      - </span> @Model.HazardDate</li>
                    <li class="list-group-item"><span class="font-weight-bold">Reporter Email   - </span> @Model.ReporterEmail</li>
                    <li class="list-group-item"><span class="font-weight-bold">Reporter Mobile  - </span> @Model.ReporterMobile</li>
                    <li class="list-group-item"><span class="font-weight-bold">Report Date      - </span> @Model.ReportDate</li>
                    
                </ul>

    </div>
    <form asp-action="DeleteReport" href="Index">
	<div class="form-group">
              <input type="submit" value="Delete" class="btn btn-primary" href="Index"/>
         </div>
    </form>

    <div>
        <a asp-action="Index">Back to Home</a>
    </div>
</div>