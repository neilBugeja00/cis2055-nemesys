@model NEMESYS.Models.ReportClass

@{
    ViewData["Title"] = "EditReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Report</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditInvestigationStatusRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HazardStatus" class="control-label">Type of Hazard</label>
                <select name="HazardStatus" class="form-control" asp-items="@ViewBag.typesOfStatus" asp-for="HazardStatus"></select>
                <span asp-validation-for="HazardStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit Status" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <p>
        @ViewBag.messageReportStatusEditted
    </p>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
