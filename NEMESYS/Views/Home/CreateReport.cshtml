@model NEMESYS.Models.ReportClass

@{
    ViewData["Title"] = "CreateReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateReport</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReport">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReportDate" class="control-label"></label>
                <input asp-for="ReportDate" type="date" class="form-control" />
                <span asp-validation-for="ReportDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportTitle" class="control-label"></label>
                <input asp-for="ReportTitle" class="form-control" />
                <span asp-validation-for="ReportTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HazardLocation" class="control-label"></label>
                <input asp-for="HazardLocation" class="form-control" />
                <span asp-validation-for="HazardLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HazardType" class="control-label"></label>
                <input asp-for="HazardType" class="form-control" />
                <span asp-validation-for="HazardType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HazardDate" class="control-label"></label>
                <input asp-for="HazardDate" type="date" class="form-control" />
                <span asp-validation-for="HazardDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HazardDescription" class="control-label"></label>
                <input asp-for="HazardDescription" class="form-control" />
                <span asp-validation-for="HazardDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
